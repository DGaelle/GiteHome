            @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
    <div class="form-group float-lg-right m-5">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enregistrer" class="btn btn-outline-info btn-lg" />
        </div>
    </div>

}

    <div class="m-5">
        @Html.ActionLink("Retour", "Compte", new { id = Model.IdUtilisateur }, new { @class = "btn btn-outline-danger m-1 btn-lg" })
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

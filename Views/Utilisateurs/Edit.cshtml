@model GiteHouse.Utilisateur

@{
    ViewBag.Title = "Edit";
}

<h2>Vos informations personnelles</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<div class="d-flex flex-column align-items-center">


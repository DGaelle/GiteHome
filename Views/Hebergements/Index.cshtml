@model IEnumerable<GiteHouse.Hebergement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
    <th>
        
    </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionCourte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surface)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrixBase)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="../@item.Photos.First().Nom" alt="PhotoVilla" width="200"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionCourte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surface)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrixBase)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdHebergement }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdHebergement }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdHebergement })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Ajouter un hébergement", "Create", null, new { @class= "btn btn-outline-success"})
</p>